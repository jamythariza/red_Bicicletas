extends ../layout

block content
    a(href='/bicicletas/create') Crear

    table.table
        thead
            tr 
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
                th(scope='col') 
                th(scope='col') 
        tbody   
            each bici in bicis
                tr 
                    th(scope='row')
                        = bici.code
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion
                    td
                        a(href='bicicletas/'+bici.code + '/update') Editar
                    td
                        form.inline(method='post' action='bicicletas/'+ bici.code + '/delete')
                            input(type='hidden' name='id' value= bici.code)
                            button.link-button(typy='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'


